{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "LaunchWebTemplates (default)",
            "type": "shell",     // cmd only ("terminal.integrated.defaultProfile.windows": "Command Prompt")
            "command": "start cmd /c \"cd ${workspaceFolder} && launch.bat && pause\"",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Increment version",
            "type": "shell",     // cmd only ("terminal.integrated.defaultProfile.windows": "Command Prompt")
            "command": "cd ${workspaceFolder}\\dev && node incrementVersion.js",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Git push",
            "type": "shell",     // cmd only ("terminal.integrated.defaultProfile.windows": "Command Prompt")
            "command": "cd ${workspaceFolder}\\dev && node gitPush.js",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
    ],
}